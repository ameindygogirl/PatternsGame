<Window x:Class="DesignPatternsGame.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Results" Height="331.731" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Canvas Background="#FF4FB29B">
        <Label x:Name="lblResults" Content="Congratulations!" Canvas.Left="66" Canvas.Top="23" Width="160" Foreground="White" FontSize="20"/>
        <Image x:Name="img" Height="150" Canvas.Left="66" Canvas.Top="65" Width="160"/>
        <Label Content="Would you like to play again?" Canvas.Left="36" Canvas.Top="215" Width="220" Foreground="#FFFBFBFB" FontSize="16"/>
        <Button x:Name="btnYes" Content="Yes" Canvas.Left="43" Canvas.Top="251" Width="75" Background="#FF88F356" Foreground="Black" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" Canvas.Left="169" Canvas.Top="251" Width="75" IsCancel="True" Foreground="Black" Background="#FFFF4949"/>
        <MediaElement Height="100" Canvas.Left="10" Width="100" Source="Sounds/Won.mp3"/>

    </Canvas>
</Window>
