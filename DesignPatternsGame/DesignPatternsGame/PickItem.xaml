                <ImageBrush ImageSource="Images/health.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="lblHealth" Content="Label" HorizontalAlignment="Left" Margin="167,115,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSnack" Content="" HorizontalAlignment="Left" Margin="265,10,0,0" VerticalAlignment="Top" Width="100" Height="101" Click="btnSnack_Click">
