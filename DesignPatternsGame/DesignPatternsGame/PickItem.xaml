                <ImageBrush ImageSource="Images/snack.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="lblSnack" Content="Label" HorizontalAlignment="Left" Margin="298,116,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
