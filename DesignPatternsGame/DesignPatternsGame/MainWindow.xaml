<Window x:Class="DesignPatternsGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fuzzy Critter Battles" Height="911.194" Width="1256.343" WindowState="Maximized" ResizeMode="NoResize">
    <Grid Background="#FF4FB29B">
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New Game" Click="Create_Click"/>
                    <MenuItem Header="_Close" Click="Close_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel>
                <Canvas x:Name="board" Height="100" Width="100"/>
            </StackPanel>
        </DockPanel>
        <Button x:Name="btnBattle" Content="BATTLE!" Canvas.Left="80" Canvas.Top="150" Width="159" Height="69" FontSize="36" FontFamily="Rosewood Std Regular" Click="battle_Click"/>
        <Button x:Name="btnPickCharacters" Content="Pick Character" HorizontalAlignment="Left" Margin="194,430,0,0" VerticalAlignment="Top" Width="96" Click="btnPickCharacters_Click"/>


    </Grid>
</Window>
