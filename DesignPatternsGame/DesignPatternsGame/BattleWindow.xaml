<Window x:Class="DesignPatternsGame.BattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BattleWindow" Height="386.512" Width="481.395">

    <Canvas x:Name="battleWindow1"  Background="#FF2D5B61">
        <Button x:Name="attackButton1" Content="Attack" BorderBrush="Black" BorderThickness="1" Height="30" Canvas.Top="256" Width="100" Background="White" Canvas.Left="24" Click="attackButton_Click"/>
        <Button x:Name="defendButton1" Content="Defend" BorderBrush="Black" BorderThickness="1" Height="30" Canvas.Left="131" Canvas.Top="256" Width="100" Background="White"/>
        <Button x:Name="specialButton1" Content="Special" BorderBrush="Black" BorderThickness="1" Height="30" Canvas.Left="355" Canvas.Top="256" Width="100" Background="White"/>
        <Button x:Name="itemButton1" Content="Item" BorderBrush="Black" BorderThickness="1" Height="30" Canvas.Left="250" Canvas.Top="256" Width="100" Background="White"/>
        <TextBox x:Name="battlePrompt1" Height="23" Canvas.Left="24" TextWrapping="Wrap" Text="TextBox" Canvas.Top="22" Width="431" FontFamily="Segoe UI Semibold" BorderThickness="0" CaretBrush="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="battlePrompt_TextChanged">
            <TextBox.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF69C98E"/>
                    <GradientStop Color="#FF326044" Offset="1"/>
                </RadialGradientBrush>
            </TextBox.Background>
        </TextBox>
        <Image x:Name="enemyImg1" Height="100" Canvas.Left="192" Canvas.Top="100" Width="100" Source="Images/enemy.png"/>
    </Canvas>
</Window>
